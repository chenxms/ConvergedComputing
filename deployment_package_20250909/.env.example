# ===================================
# 教育统计分析服务 - 环境变量配置模板
# ===================================
# 请复制此文件为 .env 并修改相应的配置值

# ===================================
# 数据库配置 (必填)
# ===================================
# 格式: mysql+pymysql://用户名:密码@主机:端口/数据库名?charset=utf8mb4
DATABASE_URL=mysql+pymysql://root:your_password@localhost:3306/appraisal_test?charset=utf8mb4

# ===================================
# 应用配置
# ===================================
# 运行环境: development/staging/production
APP_ENV=production

# 日志级别: DEBUG/INFO/WARNING/ERROR
LOG_LEVEL=INFO

# Python路径
PYTHONPATH=/app

# ===================================
# 性能配置
# ===================================
# Worker进程数 (建议设置为CPU核心数)
WORKERS=4

# 数据库连接池配置
MAX_CONNECTIONS=100    # 最大连接数
POOL_SIZE=20          # 连接池大小
POOL_RECYCLE=3600     # 连接回收时间(秒)

# ===================================
# 批处理配置
# ===================================
# 批处理相关设置
BATCH_SIZE=10         # 每批处理的数据量
BATCH_TIMEOUT=300     # 批处理超时时间(秒)
BATCH_CODE=G7-2025    # 默认批次代码

# ===================================
# Redis配置 (可选)
# ===================================
# 如果启用Redis缓存，请配置以下参数
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ===================================
# API安全配置 (可选)
# ===================================
# API密钥(如果需要API认证)
API_KEY=your_secure_api_key_here

# 允许的CORS源
CORS_ORIGINS=*

# ===================================
# 监控配置 (可选)
# ===================================
# 是否启用性能监控
ENABLE_METRICS=false

# 健康检查端点
HEALTH_CHECK_PATH=/health

# ===================================
# 文件存储配置
# ===================================
# 日志文件路径
LOG_PATH=/app/logs

# 临时文件路径
TEMP_PATH=/app/temp

# 报告输出路径
REPORT_PATH=/app/reports

# ===================================
# 计算引擎配置
# ===================================
# Pandas内存限制(MB)
PANDAS_MEMORY_LIMIT=2048

# 并行计算线程数
COMPUTE_THREADS=4

# ===================================
# 邮件通知配置 (可选)
# ===================================
# SMTP服务器配置(用于任务完成通知)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@example.com

# ===================================
# 备份配置 (可选)
# ===================================
# 自动备份设置
ENABLE_AUTO_BACKUP=false
BACKUP_PATH=/backup
BACKUP_RETENTION_DAYS=7

# ===================================
# 调试配置
# ===================================
# 是否启用调试模式(生产环境请设置为false)
DEBUG=false

# SQL日志(调试用，生产环境请设置为false)
SQL_ECHO=false